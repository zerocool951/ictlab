<Window x:Class="Server_Admin.UserInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserInputWindow" Height="124" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" KeyDown="Window_KeyDown">

    <Grid x:Name="Grid" Height="Auto">
        <StackPanel>
            <Label x:Name="Lb_Header" Content="Header" FontSize="20" FontWeight="Bold" FontFamily="Trebuchet MS" />
            <TextBox x:Name="Tb_Input" Background="White" />
            <Button x:Name="Bt_Ready" Content="Ready" IsEnabled="False" Click="Ready_Click" Margin="3" />
        </StackPanel>
    </Grid>
</Window>